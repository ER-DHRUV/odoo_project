<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="mb-0"><i class="bi bi-pencil"></i> Edit Answer</h3>
                <p class="text-muted mb-0">Question: <%= answer.question.title %></p>
            </div>
            <div class="card-body">
                <form action="/answers/<%= answer._id %>?_method=PUT" method="POST">
                    <div class="mb-3">
                        <label for="content" class="form-label">Answer</label>
                        <textarea class="form-control" id="content" name="content" rows="10" required
                                  placeholder="Write your answer here..."><%= answer.content %></textarea>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="/questions/<%= answer.question._id %>" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check"></i> Update Answer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 